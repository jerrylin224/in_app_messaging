<% page_header "Your Conversations" %>

<p><%= link_to 'Start conversation', admin_messages_new_path, class: 'btn btn-lg btn-primary' %></p>

<div class="row">
  <div class="col-sm-3">
    <ul class="nav nav-pills nav-stacked">
      <%= admin_mailbox_section 'inbox', @box %>
      <%= admin_mailbox_section 'unread', @box %>
      <%= admin_mailbox_section 'read', @box %>
      <%= admin_mailbox_section 'sent', @box %>
      <%= admin_mailbox_section 'trash', @box %>
    </ul>
  </div>
    
  <div class="col-sm-9">
    <% if @box == 'trash' %>
      <p><%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
    
    <ul class="list-group">
      <%= render partial: 'admin/conversations/conversation', collection: @conversations %>
    </ul>

    <%= paginate @conversations %>
  </div>
</div>